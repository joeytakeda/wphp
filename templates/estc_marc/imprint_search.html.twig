{% extends 'base.html.twig' %}

{% block title %}ESTC Marc Record Search{% endblock %}

{% block pageheader %}
    <h1>ESTC Marc Record Search</h1>
    {% if estcMarcs|length %}
        <p class="count">
            Displaying {{ estcMarcs|length }} search results of {{ titleIds.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %}

{% block body %}

    <form method="get" class="form-horizontal">
        <fieldset>
            <legend>Search the ESTC Marc records</legend>
            <div class="form-group">
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='input-group'>
                    <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class='glyphicon glyphicon-search'></span>
                            Search
                        </button>
                    </span>
                </div>
                <p class="help-block col-sm-offset-2">Search the records by imprint.</p>
            </div>
        </fieldset>
    </form>

    {% if estcMarcs|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Imported</th>
                    <th>Title</th>
                    <th>Imprint</th>
                </tr>
            </thead>
            <tbody>
            {% for estcMarc in estcMarcs %}
                <tr>
                    <td>
                        <a href="{{ path('resource_estc_show', { 'id': estcMarc.titleId }) }}">
                            {{ estcMarc.titleId }}
                        </a>
                    </td>
                    <td>{% if manager.isImported(estcMarc) %} Yes {% else %} No {% endif %}</td>
                    <td>{{ manager.getTitle(estcMarc) }}</td>
                    <td>{{ manager.getFieldValues(estcMarc, '260')|join(" ") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(titleIds) }}
        </div>
    {% endif %}

{% endblock %}
