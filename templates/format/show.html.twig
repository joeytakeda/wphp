{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Format</h1>
{% endblock %}

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('format_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('format_edit', { 'id': format.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Format
                </a>
                <a href="{{ path('format_delete', { 'id': format.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Format?">
                    <span class='glyphicon glyphicon-remove'></span> Delete Format
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th data-toggle="popover" data-content="Binding format name">Name</th>
                <td>{{ format.name }}</td>
            </tr>
            <tr>
                <th data-toggle="popover" data-content="Binding format abbreviated alphanumerically">Abbreviation</th>
                <td>{{ format.abbreviation }}</td>
            </tr>
            <tr>
                <th data-toggle="popover" data-content="Binding format description">Description</th>
                <td>{{ format.description|raw }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('title/table.html.twig') }}

    <div class="navigation">
        {{ knp_pagination_render(titles) }}
    </div>

{% endblock %}
