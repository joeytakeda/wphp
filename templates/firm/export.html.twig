{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Titles by {{ firm }} <small>in {{ format|upper }} format</small></h1>
{% endblock %} 

{% block body %}
    <p>There are {{ firmRoles|length }} titles associated with this firm.<p>
    <ul class="list-group">
        {% for tfr in firmRoles %}
            {% set title = tfr.title %}
            <li class="list-group-item">{{ include('partials/citation/' ~ format ~ '.html.twig', {'title': title}) }}</li>
            {% endfor %}
    </ul>
{% endblock %}
