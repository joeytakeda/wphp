{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Genre</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('genre_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('genre_edit', { 'id': genre.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Genre
                </a>
                <a href="{{ path('genre_delete', { 'id': genre.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Genre?">
                    <span class='glyphicon glyphicon-remove'></span> Delete Genre
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description|raw }}</td>
            </tr>
        </tbody>
    </table>

    {% embed 'title/partials/page.html.twig' with {'titles': titles} %}
    {% endembed %}                

{% endblock %}
